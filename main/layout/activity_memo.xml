                android:background="@drawable/ic_memfond" android:id="@+id/button16"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button17"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button18"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button19"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button20"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>