<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="integradora.ingenieria.yacalu.yacalu1.MemoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Puntos: "
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/txt_puntos"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Tiros: "
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/txt_tiros"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_new"
                android:hint="@string/start"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button1"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button2"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button3"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button4"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button5"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button6"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button7"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button8"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button9"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button10"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
