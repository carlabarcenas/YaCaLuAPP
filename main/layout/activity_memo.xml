                android:background="@drawable/ic_memfond" android:id="@+id/button11"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button12"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageButton
                android:background="@drawable/ic_memfond" android:id="@+id/button13"
                android:layout_width="@dimen/ancho" android:layout_height="@dimen/alto"
                android:layout_weight="1"/>
