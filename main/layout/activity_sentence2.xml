<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="integradora.ingenieria.yacalu.yacalu1.Sentence2Activity">

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/btnmenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_part1"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="73dp"
        android:layout_weight="1"
        android:hint="@string/textbottle"
        android:textSize="24sp"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/et_complete"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:layout_alignBaseline="@+id/tv_part1"
        android:layout_alignEnd="@+id/btn_check"
        android:ems="10"
        android:textSize="24sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tv_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:layout_weight="1"
        android:text=" "
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_part2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_part1"
        android:layout_marginEnd="44dp"
        android:layout_weight="1"
        android:hint="@string/texttable"
        android:textSize="24sp"
        tools:ignore="RtlCompat" />


    <ImageView
        android:id="@+id/iv_bottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_onbottlesentence"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:hint="@string/btnverify"/>

    <Button
        android:id="@+id/btn_nx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_check"
        android:layout_marginEnd="12dp"
        android:background="@android:color/transparent"
        android:hint="@string/btnnext"
        tools:ignore="RtlCompat" />

</RelativeLayout>