<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="integradora.ingenieria.yacalu.yacalu1.NewListAdjectActivity"
    android:orientation="vertical"
    android:background="@drawable/ic_rth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <Button
            android:background="@drawable/shape_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newquestion"
            android:hint="@string/newquestion"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="100dp"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text=" "/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_aciertos"
            android:enabled="false"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text=" "/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_errores"
            android:enabled="false" />
        <Button
            android:id="@+id/btn_return"
            android:background="@drawable/shape_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/btn_irmenu"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="100dp"
            />

    </LinearLayout>

    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sad"
                    android:id="@+id/btn4"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="many"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn9"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="thin."
                    android:layout_weight="1"
                    android:id="@+id/btn3"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Those"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn8"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn7"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="careful"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:id="@+id/btn2"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="rich"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn5"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="their"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn11"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="jealous"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn1"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="much"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn10"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blue"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn6"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/target1"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/test1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="His wife is very  _________"
                            android:visibility="invisible"
                            android:background="@android:color/transparent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/target2"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/test2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:text="He is a ________ student."
                            android:visibility="invisible"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/target3"
                        android:padding="3dp"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/test3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:visibility="invisible"
                            android:text="She is ______" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/target4"
                        android:padding="3dp"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/test4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:visibility="invisible"
                            android:text="They are __________" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/target5"
                        android:padding="3dp"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/test5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:visibility="invisible"
                            android:text="Donald is rich" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/target6"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/test6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="I have a ______ skirt"
                            android:visibility="invisible"
                            android:background="@android:color/transparent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/target7"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/test7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="____ car is very fast"
                            android:visibility="invisible"
                            android:background="@android:color/transparent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/target8"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/test8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="_______ are my shoes"
                            android:visibility="invisible"
                            android:background="@android:color/transparent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/target9"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/test9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="There are so _____ things to do"
                            android:visibility="invisible"
                            android:background="@android:color/transparent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/target10"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/test10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="There is no ______ time"
                            android:visibility="invisible"
                            android:background="@android:color/transparent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/target11"
                        android:padding="3dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/test11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="There are _____ books"
                            android:visibility="invisible"
                            android:background="@android:color/transparent"/>

                    </LinearLayout>

                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </GridLayout>




</LinearLayout>