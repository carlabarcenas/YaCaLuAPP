<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TriangleActivity">

    <Button
        android:background="@android:color/transparent"
        android:text="Triangulo - Triangle"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <ImageButton
        style="@style/tx_triangle"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:background="@drawable/ic_triangular"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:id="@+id/btn_triangle"
        />

    <Button

        style="@style/tx_triangle"
        android:id="@+id/btn_nextt"
        android:text="@string/next"
        android:background="@drawable/shape_green"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        />



    <Button
        android:id="@+id/btn_previoust"
        style="@style/tx_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_green"
        android:text="previous"
        android:layout_marginTop="9dp"
        />


</LinearLayout>