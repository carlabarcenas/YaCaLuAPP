<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ic_rt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="integradora.ingenieria.yacalu.yacalu1.VocabularyActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView

                    style="@style/imageScroll"
                    android:id="@+id/btn_party"
                    android:background="@drawable/ic_part"/>
                <ImageView
                    style="@style/imageScroll"
                    android:id="@+id/btn_ask"
                    android:background="@drawable/ic_ped"/>
                <ImageView
                    style="@style/imageScroll"
                    android:id="@+id/btn_web"
                    android:background="@drawable/ic_wbbb"/>
                <ImageView
                    style="@style/imageScroll"
                    android:id="@+id/btn_throttle"
                    android:background="@drawable/ic_ace"/>
                <ImageView
                    style="@style/imageScroll"
                    android:id="@+id/btn_luggage"
                    android:background="@drawable/ic_equi"/>
                <ImageView
                    style="@style/imageScroll"
                    android:id="@+id/btn_keyboard"
                    android:background="@drawable/ic_te"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <GridLayout
                    android:id="@+id/ll_ar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="10"
                    android:columnCount="6"
                    android:columnOrderPreserved="true"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="50dp"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:id="@+id/ll"
                        style="@style/ar"
                        android:layout_column="0"
                        android:layout_row="1">

                        <ImageView
                            android:id="@+id/btn_server1"
                            style="@style/imageScroll"
                            android:background="@drawable/ic_web" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_acel"
                        style="@style/ar"
                        android:layout_column="1"
                        android:layout_row="1">

                        <ImageView
                            android:id="@+id/btn_throttle1"
                            style="@style/imageScroll"
                            android:background="@drawable/ic_th" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_par"
                        style="@style/ar"
                        android:layout_column="0"
                        android:layout_row="2">

                        <ImageView
                            android:id="@+id/btn_party1"
                            style="@style/imageScroll"
                            android:background="@drawable/ic_party" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_as"
                        style="@style/ar"
                        android:layout_column="1"
                        android:layout_row="2">

                        <ImageView
                            android:id="@+id/btn_ask1"
                            style="@style/imageScroll"
                            android:background="@drawable/ic_ask" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lug"
                        style="@style/ar"
                        android:layout_column="0"
                        android:layout_row="3">

                        <ImageView
                            android:id="@+id/btn_luggage1"
                            style="@style/imageScroll"
                            android:background="@drawable/ic_la" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_key"
                        style="@style/ar"
                        android:layout_column="1"
                        android:layout_row="3">

                        <ImageView
                            android:id="@+id/btn_keyboard1"
                            style="@style/imageScroll"
                            android:background="@drawable/ic_key" />


                    </LinearLayout>

                </GridLayout>
            </ScrollView>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>