<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/ic_rt"
android:orientation="vertical"
tools:context="integradora.ingenieria.yacalu.yacalu1.MenuActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <GridLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_writing"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:background="@drawable/ic_menu_writing" />


            <ImageButton
                android:id="@+id/btn_verbs"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="0"
                android:background="@drawable/ic_menu_tiempos" />


            <ImageButton
                android:id="@+id/btn_grammar"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="0"
                android:layout_row="1"
                android:background="@drawable/ic_menu_gramar" />


            <ImageButton

                android:id="@+id/btn_adjectives"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="1"
                android:background="@drawable/ic_menu_adj"
                android:textAlignment="center" />


            <ImageButton

                android:id="@+id/btn_vocabulary"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="0"
                android:layout_row="2"
                android:background="@drawable/ic_menu_vocab" />

            <ImageButton
                android:id="@+id/btn_sentences"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="2"
                android:background="@drawable/ic_menu_ora"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/btn_Memory"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="0"
                android:layout_row="3"
                android:background="@drawable/ic_menu_tar" />

            <ImageButton
                android:id="@+id/btn_objetss"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="3"
                android:background="@drawable/ic_menu_obj"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/btn_conect"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="0"
                android:layout_row="4"
                android:background="@drawable/ic_menu_conect" />

            <ImageButton
                android:id="@+id/btn_figures"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="4"
                android:background="@drawable/ic_menu_geometric"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/btn_condicionalss"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="0"
                android:layout_row="5"
                android:background="@drawable/ic_menu_condiciones" />

            <ImageButton

                android:id="@+id/btn_pre"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="5"
                android:background="@drawable/ic_menu_presentaciones"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/btn_expressions"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="0"
                android:layout_row="6"
                android:background="@drawable/ic_menu_expr" />

            <ImageButton
                android:id="@+id/btn_urls"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="6"
                android:background="@drawable/ic_menu_url"
                android:textAlignment="center" />

            <TextView
                android:layout_column="2"
                android:layout_row="7" />

            <TextView
                android:layout_column="0"
                android:layout_row="7" />

            <ImageButton
                android:id="@+id/btn_quiz"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="8"
                android:background="@drawable/ic_menu_quiz"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/btn_info"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="8"
                android:background="@drawable/ic_menu_info"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btn_Fb"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_column="2"
                android:layout_row="9"
                android:background="@drawable/ic_menu_face"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btn_youtube"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/btnFb"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="9"
                android:background="@drawable/ic_you"
                tools:ignore="MissingConstraints" />


        </GridLayout>
    </ScrollView>

</RelativeLayout>