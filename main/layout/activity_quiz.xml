<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:padding="8dp"
                android:textSize="20sp">

                <TextView
                    android:id="@+id/txt_score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/msg_score"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="0"
                    android:textSize="25dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_question"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="40dp"
                android:padding="8dp"
                android:text="@string/msg_question"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_choice_one"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:alpha="0.5"
                android:background="#44f241"
                android:padding="8dp"
                android:text="@string/msg_answer_one"
                android:textColor="@android:color/background_dark"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_choice_two"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:alpha="0.5"
                android:background="#f8ec0c"
                android:padding="8dp"
                android:text="@string/msg_answer_two"
                android:textColor="@android:color/background_dark"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_choice_three"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:alpha="0.5"
                android:background="@color/light_blue"
                android:padding="8dp"
                android:text="@string/msg_answer_three"
                android:textColor="@android:color/background_dark"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_quit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:alpha="0.5"
                android:padding="8dp"
                android:text="@string/msg_qualify"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>